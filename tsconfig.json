{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017", "DOM"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["react-native"],
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "paths": {
      "@api/*": ["api/*"],
      "@theme/*": ["theme/*"],
      "@store/*": ["store/*"],
      "@assets/*": ["assets/*"],
      "@screens/*": ["screens/*"],
      "@modules/*": ["modules/*"],
      "@typings/*": ["typings/*"],
      "@library/*": ["library/*"],
      "@navigation/*": ["navigation/*"],
      "@components/*": ["components/*"],
      "@translations/*": ["translations/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
